#include<iostream>
using namespace std;
int main(){
    string str,x;
    getline(cin,str);
    cout<<"the enterd string is :"<<endl;
    cout<<str<<endl;

    str.push_back('p');
    cout<<"the string after adding a new string is :"<<endl;
    cout<<str<<endl;
    str.pop_back();
    cout<<"the string after pop_back function"<<endl;
    cout<<str<<endl;
    return 0;
}
